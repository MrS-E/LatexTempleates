\newcommand{\journalhelp}[1]{Hilfestellungen & #1 \\\hline}


\newcommand{\journaltime}[1]{
    \multicolumn{2}{l}{Ist-/Soll-Zeit} \\ 
    \multicolumn{2}{r}{
